            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_RIGHT">
               <children>
                  <Label text="Welcome, Admin!" textFill="#fcd677" />
                  <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#logOut" style="-fx-text-fill: #EEE;" text="Sign out">
                     <styleClass>
                        <String fx:value="no-border" />
                        <String fx:value="icn-exit" />
                     </styleClass>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
