<BorderPane fx:id="mainViewRoot" stylesheets="/css/style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="arm.davsoft.staffmanager.controllers.MainScreenController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: #333;" BorderPane.alignment="CENTER">
