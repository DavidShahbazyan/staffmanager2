      <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" spacing="5.0" style="-fx-background-color: #555;" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txt_search" promptText="Filter..." styleClass="search" />
            <TitledPane text="Advanced" expanded="false">
               <AnchorPane></AnchorPane>
            </TitledPane>
            <ListView fx:id="membersListView" prefHeight="200.0" prefWidth="200.0" styleClass="myTree" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="5.0">
               <children>
                  <Button fx:id="btn_add" mnemonicParsing="false" onAction="#createNewPersonalData" style="-fx-text-fill: #EEE;" text="New">
                     <styleClass>
                        <String fx:value="icn-add" />
                        <String fx:value="no-border" />
                     </styleClass></Button>
                  <Button fx:id="btn_edit" mnemonicParsing="false" onAction="#editPersonalData" style="-fx-text-fill: #EEE;" text="Edit">
                     <styleClass>
                        <String fx:value="icn-edit" />
                        <String fx:value="no-border" />
                     </styleClass></Button>
                  <Button fx:id="btn_delete" mnemonicParsing="false" onAction="#deletePersonalData" style="-fx-text-fill: #EEE;" text="Delete">
                     <styleClass>
                        <String fx:value="icn-remove" />
                        <String fx:value="no-border" />
                     </styleClass></Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </left>
